{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src", 
    "baseUrl": "./src",  
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "paths": {
        "shared/*": ["../shared/dist-node"]  
    }
  },
  "include": ["src/**/*", "src/tests", "src/tests/unit"],  
  "exclude": ["node_modules"]
}